<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="position"
            type="Integer" />

        <variable
            name="itemClick"
            type="com.minorproject.cloudgallery.views.adapters.CategoryPageDetailItemClick" />
        <variable
            name="image"
            type="com.minorproject.cloudgallery.model.Image" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/detail_layout"
        android:longClickable="false"
        android:onClick="@{()->itemClick.onItemClicked(image.link, position)}">

        <ImageView
            android:id="@+id/detail_imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:background="#86000000"
            android:src="@mipmap/icon"
            tools:imageUrl="@{image.link}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>